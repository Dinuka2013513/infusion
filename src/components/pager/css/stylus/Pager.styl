/**
 * Two main parts to Pager: Data, and UI
 * Data and UI separated into 2 parts: Layout and Color Themes
 */

/***********************************************************/
/** LAYOUT **/
/* Pager data */
.fl-pager .fl-pager-data {
    .fl-pager-desc {
        background: url(../images/arrow-up.png) no-repeat right;
    }
    
    .fl-pager-asc {
        background: url(../images/arrow-dn.png) no-repeat right;
    }
}

/* Pager UI */
/* Class name for the list container */
.fl-pager .fl-pager-ui {
    margin: 0; 
    padding: 0;
    
    li {
        list-style-type: none;
        display: inline;
    }
    
    a {
        padding: 0 3px;
        margin: 0 2px;
    }
    
    .fl-pager-links a {
        border: 1px solid #ccc;
        background-color: #fff;
        zoom: 1;
        
        &:hover {
            background-color: #0287C5;
            color: #fff;
            text-decoration: none;
        }
    }
    
    .fl-pager-disabled,
    .fl-pager-links .fl-pager-currentPage {
        color: #000;
        border: none;
        background-color: transparent;
        text-decoration: none;
    }
    
    
    .fl-pager-disabled:hover,
    .fl-pager-links .fl-pager-currentPage:hover {
        background-color: transparent;
        color: #000;
        text-decoration: none;
        cursor: default;
    }
}

/***********************************************************/
/** THEMES - High Contrast **/
/* Pager data */
.fl-theme-bw .fl-pager .fl-pager-data {
    .fl-pager-desc {
        background: url(../images/arrow-up.png) no-repeat right;
    }
    .fl-pager-asc {
        background: url(../images/arrow-dn.png) no-repeat right;
    }
}
